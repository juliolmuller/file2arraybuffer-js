{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "@lacussoft"
  ],
  "ignorePatterns": [
    "build/",
    "dist/",
    "**/*.d.ts",
    "!.babelrc*"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-param-reassign": "off",
    "prefer-destructuring": "off",
    "semi": ["error", "always"],
    "semi-style": ["error", "last"]
  }
}
