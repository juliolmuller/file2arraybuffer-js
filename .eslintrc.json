{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": ["google"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "arrow-parens": ["error", "always"],
    "max-len": ["error", { "code": 100 }],
    "object-curly-spacing": ["error", "always"],
    "padded-blocks": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  }
}
